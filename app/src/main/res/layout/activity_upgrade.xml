<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="350dp"
              android:layout_height="wrap_content"
              android:background="?attr/listBackground"
        >

    <TextView
            android:id="@+id/tv"
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="?attr/articleTitleColor"
            android:textStyle="bold"
            android:textSize="20sp"
            android:lineSpacingExtra="8dp"
            android:text="检查更新"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            />

    <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/articleContentColor"
            android:lineSpacingExtra="8dp"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_gravity="center_horizontal"
            android:text="最新版本"
            />

    <ImageView
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_upgrade"
            />

    <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/articleContentColor"
            android:lineSpacingExtra="8dp"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="版本简介"
            />
    <View
            android:layout_marginTop="10dp"
            android:id="@+id/v_divide1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#D5D5D5"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <View
                android:id="@+id/v_divide2"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#D5D5D5"
                android:layout_centerInParent="true"
                />
        <Button
                android:id="@+id/btn_upgrade"
                android:layout_alignStart="@id/v_divide2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="立即升级"
                style="?android:attr/borderlessButtonStyle"
        />
        <Button
                android:id="@+id/btn_cancel_upgrade"
                android:layout_alignEnd="@id/v_divide2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="以后再说"
                style="?android:attr/borderlessButtonStyle"
                />
    </RelativeLayout>

</LinearLayout>