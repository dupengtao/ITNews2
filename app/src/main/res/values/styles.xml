<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/barColor</item>
        <item name="android:titleTextColor">@color/barColor</item>
    </style>

    <style name="AppTheme.Day" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="listBackground">@color/listBg</item>
        <item name="listTitleTextColor">@color/listTitleColor</item>
        <item name="listItemBackground">@color/listItemBg</item>
        <item name="listItemDivideColor">@color/listDivide</item>
        <item name="listSummaryTextColor">@color/listSummaryColor</item>
        <item name="listDateTextColor">@color/listDateColor</item>
        <item name="toolbarBackground">@color/toolBarBg</item>
        <item name="toolbarTitleColor">@color/toolBarTitleColor</item>
        <item name="toolbarArticleBackground">@color/toolBarArticleBg</item>
        <item name="articleTitleColor">@color/articleTitleColor</item>
        <item name="articleBackground">@color/articleContentBg</item>
        <item name="articleContentColor">@color/articleContentTextColor</item>
    </style>

    <style name="AppTheme.Night" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="listBackground">@color/listBg_Night</item>
        <item name="listTitleTextColor">@color/listTitleColor_Night</item>
        <item name="listItemBackground">@color/listItemBg_Night</item>
        <item name="listItemDivideColor">@color/listDivide_Night</item>
        <item name="listSummaryTextColor">@color/listSummaryColor_Night</item>
        <item name="listDateTextColor">@color/listDateColor_Night</item>
        <item name="toolbarBackground">@color/toolBarBg_Night</item>
        <item name="toolbarTitleColor">@color/toolBarTitleColor_Night</item>
        <item name="toolbarArticleBackground">@color/toolBarArticleBg_Night</item>
        <item name="articleTitleColor">@color/articleTitleColor_Night</item>
        <item name="articleBackground">@color/articleContentBg_Night</item>
        <item name="articleContentColor">@color/articleContentTextColor_Night</item>
    </style>


    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="actionOverflowMenuStyle">@style/PopupMenu</item>
    </style>
    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <!--<item name="android:popupBackground">@color/colorPrimary</item>-->

        <!-- Required for pre-Lollipop. -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">-8.0dp</item>

        <!-- Required for Lollipop. -->
        <!--<item name="android:overlapAnchor">false</item>-->
        <!--<item name="android:dropDownVerticalOffset">-4.0dip</item>-->
    </style>


    <style name="Theme.ActivityDialogStyle" parent="AppTheme.Day">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/black_p50</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>
